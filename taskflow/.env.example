# TaskFlow Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# REQUIRED VARIABLES
# ============================================

# Twilio WhatsApp Configuration
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
# For sandbox, use: whatsapp:+14155238886
# For production, use your Twilio WhatsApp number

# ============================================
# OPTIONAL VARIABLES
# ============================================

# Environment (dev/prod)
# Default: dev
ENVIRONMENT=dev

# Google Gemini API Key (for AI features)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# SerpAPI Key (for flight search)
# Get from: https://serpapi.com/
SERPAPI_KEY=your_serpapi_key_here

# Server Configuration
# Default: 0.0.0.0:8000
HOST=0.0.0.0
PORT=8000

# Logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Debug Mode
# Default: false
DEBUG=false

# Webhook URL (optional, for Twilio webhook configuration)
TWILIO_WEBHOOK_URL=https://your-domain.com/webhook

# Memory File Name (optional)
# Default: user_memory.json
MEMORY_FILE=user_memory.json
